<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-euiv="X-UA-Compatible" content="ie=edge" />
    <title><%= appTitle %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>

  <body>
    <header>
      <nav>
        <div class="nav-left">
          <h1><a href="/" class="active">PlantApp</a></h1>
          <ul>
            <li><a href="/plant">See the Library</a></li>
          </ul>
        </div>
        <div class="nav-right">
          
          <% if (typeof userInSession !== "undefined") {
             if (userInSession.role === "admin") { %>
              <ul class="admin">
                <li><a href="/plant/create">Admin: Create Plant</a></li>
              </ul>
            <% } %>
  
            <% if (userInSession) { %>
              <ul class="logged-in">
              <li><a href="/userPlant">My Plants</a></li>
              <li><a href="/userPlant/create">Add Plant</a></li>
              <li>
                <form action="auth/logout" method="POST">
                  <button class="blend-style" type="submit">Logout</button>
                </form>
              </li>
            </ul>
            <% } 
          } %>
          
          

          <% if (!userInSession) { %>
            <ul class="logged-out">
            <li><a href="/auth/login">Login</a></li>
          </ul>
          <% } %>

          
        </div>
      </nav>
    </header>
    
    <main>
      <%- body %>
    </main>
    

    <footer>
      <div>
        <p>Eric Company | Esteban Basili Â© 2022</p>
      </div>
    </footer>
    
    <script src="/js/script.js"></script>
  </body>
</html>
