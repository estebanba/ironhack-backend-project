<div>
    <h2>Edit a plant of your collection</h2>

    <form action="/userPlant/<%= plant.id %>/edit" method="POST">
        
        <label>Name:
            <input type="text" name="name" value="<%= plant.name %>" required>
        </label>

        <label> Plant Type 
            <select name="plantType" multiple>  
                <% plantType.forEach((element) => { %>
                    <% if (plant.plantType.name === element.name) { %>
        
                    <option value="<%= element.id %>" selected="selected"><%= element.name %></option>
                    <% } else {%>
                    <option value="<%= element.id %>"><%= element.name %></option>
                    <% }}) %>
            </select>       
        </label> 
    
        <label"">Location:
            <input type="text" name="location" value="<%= plant.location %>">
        </label>
    
        <label>Comments:
            <input type="text" name="comments" value="<%= plant.comments %>">
        </label>
    
        <button type="submit">Save changes</button>
    
    </form>
</div>
